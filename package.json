{
  "name": "LoGrep",
  "displayName": "Grep and Highlight",
  "description": "Grep and Highlight Tool to assist to check logs",
  "version": "0.0.2",
  "icon": "media/icon.png",
  "publisher": "woool",
  "repository": {
    "type": "git",
    "url": "https://github.com/wooolwooolwoool/LoGrep.git"
  },
  "license": "GPL-2.0-only",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
		  "onView:grepInputView"
	],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "grepSidebar",
          "title": "Grep & Highlight",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "grepSidebar": [
        {
          "type": "webview",
          "id": "grepInputView",
          "name": "Grep Input"
        }
      ]
    },
    "commands": [
    ],
    "configuration": {
      "title": "Grep Extension",
      "properties": {
        "grepExtension.settings": {
          "type": "object",
          "default": {},
          "description": "Saved settings for the Grep extension"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "ts-loader": "^9.5.1",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
